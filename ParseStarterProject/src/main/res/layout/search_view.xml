<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <EditText
        android:id="@+id/search_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/search_transactions"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Search by card code "
        android:inputType="textPersonName"
        android:padding="10dp"
        android:paddingRight="5dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Choose date: "
            android:textStyle="bold"
            android:layout_below="@id/search_txt"
            android:textColor="#000000"
            android:textSize="20sp"
            android:id="@+id/text1"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginRight="20dp"
        android:layout_below="@id/search_txt"
        android:id="@+id/date_btn"
        android:background="@drawable/button_black"
        android:layout_alignParentRight="true"
        android:text="pick date"
        android:textColor="#F38222"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Choose user: "
        android:layout_below="@id/text1"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/text2"/>

    <Spinner
        android:layout_width="wrap_content"
        android:id="@+id/spinner_search_view"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_btn"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/text2"
        ></Spinner>



</RelativeLayout>